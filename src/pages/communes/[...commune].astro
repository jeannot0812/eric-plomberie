---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/layout/Header.astro';
import Footer from '../../components/layout/Footer.astro';
import Hero from '../../components/sections/Hero.astro';
import Services from '../../components/sections/Services.astro';
import Team from '../../components/sections/Team.astro';

import communesData from '../../data/communes.json';
import testimonialsData from '../../data/testimonials.json';
import { getPageTitle, getMetaDescription, getTestimonials } from '../../utils/content-variations';
import { getContactByDepartement } from '../../utils/departement-contact';

// Génère toutes les routes statiques
export async function getStaticPaths() {
  return communesData.communes.map((commune) => ({
    params: { commune: commune.slug },
    props: { commune }
  }));
}

const { commune } = Astro.props;

// Récupérer les contacts selon le département
const contact = getContactByDepartement(commune.department.code);

const title = getPageTitle(commune, contact);
const description = getMetaDescription(commune, contact);

// Récupérer les communes voisines
const neighborCommunes = commune.neighbors
  .map((neighborId: string) => communesData.communes.find((c: any) => c.id === neighborId))
  .filter(Boolean)
  .slice(0, 8);

// Témoignages
const testimonialLocations = [commune.name, ...neighborCommunes.map((n: any) => n.name)];
const testimonials = getTestimonials(commune.id, testimonialsData.testimonials, testimonialLocations, 3);
---

<BaseLayout title={title} description={description} commune={commune}>
  <Header contact={contact} />

  <!-- Hero Section (Bloc photo principal) -->
  <Hero commune={commune} contact={contact} />

  <!-- Services Section -->
  <Services contact={contact} />

  <!-- Testimonials Section (Témoignages) -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 uppercase tracking-tight mb-4">
          Témoignages Clients
        </h2>
        <div class="h-1 w-24 bg-primary-600 mx-auto"></div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-6xl mx-auto">
        {testimonials.map((testimonial: any) => (
          <div class="bg-white border-2 border-gray-200 p-6 hover:border-primary-600 transition-colors rounded-xl">
            <div class="flex items-center gap-1 mb-4">
              {[...Array(testimonial.rating)].map(() => (
                <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
              ))}
            </div>
            <p class="text-gray-800 mb-4 italic">"{testimonial.text}"</p>
            <div class="text-sm border-t border-gray-200 pt-3">
              <p class="font-bold text-gray-900">{testimonial.name}</p>
              <p class="text-gray-600">{testimonial.location}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Team Section (Notre équipe) -->
  <Team />

  <!-- Map Section (La carte) -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-8">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 uppercase tracking-tight mb-4">
          Zone d'intervention à {commune.name}
        </h2>
        <div class="h-1 w-24 bg-primary-600 mx-auto"></div>
      </div>

      <div class="max-w-5xl mx-auto">
        <div class="relative w-full h-96 border-4 border-gray-300 overflow-hidden rounded-xl">
          <iframe
            width="100%"
            height="100%"
            frameborder="0"
            scrolling="no"
            marginheight="0"
            marginwidth="0"
            src={`https://maps.google.com/maps?q=${commune.coordinates.lat},${commune.coordinates.lng}&hl=fr&z=14&output=embed`}
            title={`Carte de ${commune.name}`}
          ></iframe>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="py-16 bg-primary-600 text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6 uppercase">
        Contactez-nous
      </h2>

      <div class="max-w-2xl mx-auto mb-8">
        <p class="text-lg mb-6">
          Besoin d'un plombier à {commune.name} ? Contactez-nous maintenant pour un devis gratuit.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-8">
          <a
            href={`tel:${contact.phone}`}
            class="inline-flex items-center justify-center gap-3 bg-accent-600 text-white px-8 py-4 rounded-lg font-bold text-lg hover:bg-accent-700 transition-all"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            {contact.phoneDisplay}
          </a>

          <a
            href="#contact"
            class="inline-flex items-center justify-center gap-3 bg-white text-primary-600 px-8 py-4 rounded-lg font-bold text-lg hover:bg-gray-100 transition-all"
          >
            Devis Gratuit
          </a>
        </div>

        <div class="text-sm opacity-90">
          <p>Ouvert 7h30-18h • Urgences 24/7</p>
          <p>Intervention rapide à {commune.name} et alentours</p>
        </div>
      </div>
    </div>
  </section>

  <Footer contact={contact} />
</BaseLayout>
