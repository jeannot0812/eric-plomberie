---
import Button from '../ui/Button.astro';
import { getContactByDepartement } from '../../utils/departement-contact';

interface Props {
  contact?: {
    phone: string;
    phoneDisplay: string;
    email: string;
  };
}

const { contact = getContactByDepartement('75') } = Astro.props;
---

<header class="bg-white border-b-2 border-gray-200 sticky top-0 z-50">
  <div class="container mx-auto">
    <div class="flex items-center justify-between py-4">
      <!-- Logo -->
      <div class="flex items-center">
        <a href="/">
          <img src="/logo.svg" alt="Eric Plomberie - Artisan de proximitÃ©" class="h-14 cursor-pointer">
        </a>
      </div>

      <!-- Navigation desktop -->
      <nav class="hidden md:flex items-center space-x-6">
        <a href="#services" class="text-gray-700 hover:text-primary-600 transition font-medium uppercase text-sm tracking-wide">Services</a>
        <a href="#contact" class="text-gray-700 hover:text-primary-600 transition font-medium uppercase text-sm tracking-wide">Contact</a>
        <a href={`tel:${contact.phone}`} class="text-primary-600 font-semibold hover:text-primary-700 border-l-2 border-primary-600 pl-4">
          {contact.phoneDisplay}
        </a>
      </nav>

      <!-- CTA Mobile -->
      <div class="md:hidden">
        <Button variant="emergency" size="sm" href={`tel:${contact.phone}`}>
          Appeler
        </Button>
      </div>
    </div>
  </div>
</header>
