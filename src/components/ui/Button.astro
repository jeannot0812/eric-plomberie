---
interface Props {
  variant?: 'primary' | 'secondary' | 'emergency';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
  class?: string;
}

const { variant = 'primary', size = 'md', href, class: className = '' } = Astro.props;
const Tag = href ? 'a' : 'button';

const baseClasses = 'inline-flex items-center justify-center font-semibold rounded-lg transition-all duration-200';

const variantClasses = {
  primary: 'bg-primary-600 text-white hover:bg-primary-700 active:bg-primary-800',
  secondary: 'bg-gray-200 text-gray-900 hover:bg-gray-300',
  emergency: 'bg-accent-500 text-white hover:bg-accent-600 animate-pulse-emergency shadow-lg'
};

const sizeClasses = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-6 py-3 text-base',
  lg: 'px-8 py-4 text-lg'
};

const classes = `${baseClasses} ${variantClasses[variant]} ${sizeClasses[size]} ${className}`;
---

<Tag href={href} class={classes}>
  <slot />
</Tag>
