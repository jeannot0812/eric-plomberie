---
import Button from '../ui/Button.astro';

interface Props {
  commune: any;
}

const { commune } = Astro.props;

// Titre dynamique basé sur la population
function getHeroTitle(commune: any): string {
  if (commune.population > 100000) {
    return `Plombier Expert à ${commune.name}`;
  } else if (commune.population > 20000) {
    return `Plombier Expert à ${commune.name}`;
  } else {
    return `Plombier Expert à ${commune.name}`;
  }
}

const title = getHeroTitle(commune);
---

<section class="relative bg-white py-16 md:py-24">
  <div class="container mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Colonne gauche: Contenu -->
      <div class="relative z-10">
        <!-- Badge "Disponible" -->
        <div class="inline-flex items-center gap-2 bg-gray-100 px-4 py-2 rounded-full mb-6">
          <span class="w-2 h-2 bg-success-500 rounded-full animate-pulse"></span>
          <span class="text-sm font-bold text-gray-700">Disponible sur {commune.name}</span>
        </div>

        <!-- Titre principal -->
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-black text-gray-900 mb-4 leading-tight">
          {title}
        </h1>

        <!-- Sous-titre orange -->
        <p class="text-2xl md:text-3xl font-bold text-accent-600 mb-6">
          Intervention Rapide 24/7
        </p>

        <!-- Description -->
        <p class="text-lg text-gray-600 mb-8 leading-relaxed">
          Dépannage d'urgence, installation, rénovation. Intervention rapide chez vous et dans les communes voisines.
          Devis gratuit par téléphone.
        </p>

        <!-- Boutons CTA -->
        <div class="flex flex-col sm:flex-row gap-4 mb-8">
          <a
            href="tel:0758239126"
            class="inline-flex items-center justify-center gap-3 bg-primary-600 text-white px-8 py-4 rounded-lg font-bold text-lg hover:bg-primary-700 transition-all shadow-lg hover:shadow-xl"
