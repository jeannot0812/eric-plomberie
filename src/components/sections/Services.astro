---
import servicesData from '../../data/services.json';

const services = servicesData.services.slice(0, 6); // Top 6 services
---

<section id="services" class="py-20 bg-gray-50 border-y border-gray-200">
  <div class="container mx-auto">
    <div class="text-center mb-4">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 uppercase tracking-tight">
        Nos Services de Plomberie
      </h2>
    </div>
    <div class="h-1 w-24 bg-primary-600 mx-auto mb-8"></div>
    <div class="text-center mb-12">
      <p class="text-lg text-gray-700 max-w-3xl mx-auto font-medium">
        Intervention professionnelle pour tous vos besoins en plomberie et chauffage
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-7xl mx-auto mb-12">
      {services.map(service => (
        <div class="bg-white border-2 border-gray-300 hover:border-primary-600 transition-all p-6 group rounded-xl">
          <div class="flex flex-col gap-4">
            <div class="flex items-center gap-4 pb-4 border-b-2 border-gray-200 group-hover:border-primary-600 transition-colors">
              <div class="flex-shrink-0">
                <div class="w-16 h-16 bg-primary-600 flex items-center justify-center text-3xl text-white font-bold border-2 border-primary-700 rounded-lg">
                  {service.icon}
                </div>
              </div>
              <h3 class="text-xl font-black text-gray-900 uppercase tracking-tight leading-tight">
                {service.title}
              </h3>
            </div>
            <div class="flex-1">
              <p class="text-gray-700 mb-4 text-sm font-medium leading-relaxed">
                {service.description}
              </p>
              <ul class="space-y-2">
                {service.features.slice(0, 3).map(feature => (
                  <li class="text-sm text-gray-700 flex items-start gap-3">
                    <span class="text-primary-600 font-black mt-1">â–ª</span>
                    <span class="font-medium">{feature}</span>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </div>
      ))}
    </div>

    <div class="text-center mt-12 pt-8 border-t-2 border-gray-300">
      <a
        href="tel:0758239126"
        class="inline-flex items-center gap-4 bg-primary-600 text-white px-10 py-5 font-black uppercase tracking-wider hover:bg-primary-700 transition-colors border-2 border-primary-700 text-lg rounded-lg"
      >
        <span>Appelez-nous : 07.58.23.91.26</span>
      </a>
    </div>
  </div>
</section>
